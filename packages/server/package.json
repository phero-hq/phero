{
  "name": "@phero/server",
  "version": "0.10.0-alpha.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "description": "Server library for Phero",
  "homepage": "https://phero.dev",
  "repository": "phero-hq/phero",
  "bugs": "https://github.com/phero-hq/phero/issues",
  "engines": {
    "node": ">=12.22.0"
  },
  "bin": {
    "phero-server": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf generated",
    "test": "jest src",
    "prepublish": "npm run clean && npm run build",
    "dev": "tsc-watch --onSuccess \"yarn build\"",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "postbuild": "cp package.json ./dist/package.json"
  },
  "dependencies": {
    "@phero/core": "*",
    "@phero/dev": "*"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.9.5",
    "tsc-watch": "^5.0.3",
    "tsup": "^6.5.0"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Press Play Development B.V.",
    "email": "phero@pressplay.dev",
    "url": "https://pressplay.dev"
  }
}
